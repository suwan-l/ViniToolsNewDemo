/* pages/StoresList/StoresList.wxss */
page{
  background: #f19dad
}
.container{
  padding:0px;
  margin:0rpx;
  margin:auto;
}
.title{
  display:block;
  margin:60rpx auto;
  color:#fff;
  font-size: 40rpx;
  text-align:center;
}
.record_select{
  width:90%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom:15rpx;
  box-sizing: border-box;
}
.data{
  display: flex;
  align-items:center;
  justify-content: flex-start;
  font-size: 30rpx;
}
.jt {
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-left: 15rpx;
}
.jt image {
  width: 100%;
  height: 100%;
  display: block;
}
.record{
  color:rgb(31, 29, 29);
  font-size: 30rpx;
  display:block;
  text-align:left;
  font-weight: bold;
}
.record_detail{
  width:90%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: rgb(31, 29, 29);
  margin-bottom:40rpx;
  font-size:28rpx;
}
.conn{
  width:100%;
  margin:0rpx auto 50rpx;
}
.list{
  width: 92%;
  background: #fff;
  margin: 10rpx auto;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.name{
  width:95%;
  margin:0rpx auto;
  padding:20rpx 0rpx;
  box-sizing: border-box;
  display:block;
  color:#808080;
  font-size:32rpx;
  border-bottom: 1rpx solid #f5f1f1;
  
}
.detail{
  width:95%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin:auto;
  padding:30rpx 0rpx;
  box-sizing: border-box;
  font-size:28rpx;
  color:#808080
}