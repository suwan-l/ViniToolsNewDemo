page {
  background: #f19dad;
}
.conn {
  width: 100%;
  margin: 80rpx auto 30rpx;
}
.title {
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  font-weight: bold;
  display: block;
  margin-bottom: 50rpx;
}
.uploader {
  width: 90%;
  height: 750rpx;
  margin: auto;
}
.upload-img {
  width: 180rpx;
  height: 180rpx;
  margin: 23rpx;
  float: left;
}

.upload-img image {
  width: 100%;
  height: 100%;
  display: block;
}

.img {
  display: inline-block;
}

.pic {
  float: left;
  position: relative;
  margin: 23rpx;
  background: #000;
}

.pic image {
  width: 180rpx;
  height: 180rpx;
  display: block;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
}
.submitBtn {
  width: 80% !important;
  height: 60rpx;
  border: 1rpx solid #fff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  color: #fff;
  margin-bottom: 20rpx;
}
.noimg{
  width:100%;
  text-align:center;
  font-size:26rpx;
  color:#fff;
  margin-bottom: 50rpx;
}
