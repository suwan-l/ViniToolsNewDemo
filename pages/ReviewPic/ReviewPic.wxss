page {
  background: #f19dad;
}
.conn {
  width: 100%;
  margin: 60rpx auto 30rpx;
}
.title {
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  font-weight: bold;
  display: block;
  margin-bottom: 25rpx;
}
.pic{
  width:90%;
  margin: 40rpx auto;
}
.pic view{
  width:180rpx;
  height:180rpx;
  margin:15rpx 23rpx;
  display: inline-block;
}
.pic view image{
  width:100%;
  height: 100%;
 
}
.review {
  width: 80% !important;
  height: 60rpx;
  border: 1rpx solid #fff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  color: #fff;
  margin: 60rpx 0rpx;
}
.input{
  width:80%;
  height: 60rpx;
  background: #fff;
  border-radius: 50rpx;
  display:block;
  margin:30rpx auto;
  padding:0rpx 30rpx;
  box-sizing: border-box;
  color:#808080;
}
text{
  width: 80%;
  margin:30rpx auto 20rpx;
  display: block;
  color:#fff;
}
.tips{
  width: 100%;
  text-align:center;
  display: block;
  font-size:30rpx;
  font-weight: bold;
  margin:80rpx 0rpx;
}