page{
  background: #f19dad
}
.container{
  padding:0px;
}
.logo{
  width: 165rpx;
  height: 45rpx;
  margin:50rpx auto 40rpx;
  display:block;
}
.title{
  width:90%;
  display:block;
  margin:auto;
  color:#fff;
  font-size: 35rpx;
  text-align:center;
}
.title text{
  width:100%;
  display:block;
  padding:5rpx 0rpx;
  letter-spacing:4rpx;
}
.conn{
  width: 100%;
  margin:80rpx auto 30rpx;
}
.conn .section{
  width:80%;
  height: 60rpx;
  background:#fff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin:40rpx auto;
  color:#aeaeae;
}
.conn .section picker{
  width:100%;
  height:100%;
}
.conn .section .picker{
  display: inline-block; 
  min-width: 150rpx;
  margin-left:30rpx;
  box-sizing: border-box;
}
.conn .section .picker text{
  width: 100%;
  line-height:60rpx;
  padding:0rpx;
  margin:0rpx;
  color:#808080;
}
.conn .input{
  width:80%;
  height: 60rpx;
  background: #fff;
  border-radius: 50rpx;
  display:block;
  margin:30rpx auto;
  padding:0rpx 30rpx;
  box-sizing: border-box;
  color:#808080;
}
.conn text{
  width: 80%;
  margin:30rpx auto 20rpx;
  display: block;
  color:#fff;
}
.uploader{
  width: 80%;
  height:auto;
 margin:auto;
}
.upload-img{
  width: 130rpx;
  height: 130rpx;
  margin:10rpx;
  float:left;
}
.upload-img image{
  width: 100%;
  height: 100%;
  display:block;
}
.img{
  display: inline-block;
}
.pic {
float:left;
position:relative;
margin:10rpx;
background:#000;
}
.pic image{
  width: 130rpx;
  height: 130rpx;
  display:block;
}
 
.delete-btn{
  position: absolute;
  top: 0;
  right: 0;
}
.submitBtn{
  width:80% !important;
  height: 60rpx;
  border:1rpx solid #fff;
  border-radius: 50rpx;
  display:flex;
  align-items: center;
  justify-content: center;
  background:none;
  color:#fff;
  margin-bottom: 50rpx;
}
.PieChart{
  width: 550rpx;
  height: 550rpx;
  display: block;
  padding-bottom:60rpx;
}